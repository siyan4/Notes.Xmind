#===============================================DREAMS===============================================
#==============Decide========Record========Eye========Affirm========Manage========Share==============
#!/bin/bash
DREAMS=${0}`date +[%j]%H:%M:%S-[%U]%a-[%b]%d-%Y`.txt
cp -T ${0} ${DREAMS}
chmod +w ${DREAMS}
if [ -w ${DREAMS} ]; then
    echo File ${DREAMS} has been created.; vim ${DREAMS} +
    echo `date +"#==============Day %j of Year %Y, %A of Week %U, day %d of %B, Time %T"`>>${DREAMS}
    chmod -w ${DREAMS}; echo
    exit 0
else
    echo An error may have occurred!
    echo File ${DREAMS} is not writable.
    echo
    exit 1
fi
#==============Decide========Record========Eye========Affirm========Manage========Share==============
